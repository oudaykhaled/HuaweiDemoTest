<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:gravity="center_horizontal"

        >


        <TextView
            android:id="@+id/appTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Account Kit Demo"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10pt"
            android:text="Start" />

        <Button
            android:id="@+id/btn_idTokenSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10pt"
            android:text="ID-Token Mode SignIn" />

        <Button
            android:id="@+id/btn_AuthSingIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10pt"
            android:text="Authorization Code Mode SignIn" />

        <Button
            android:id="@+id/btn_Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10pt"
            android:text="Sign Out" />

        <Button
            android:id="@+id/btnListItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10pt"
            android:text="Show Items" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10pt"
            android:text="Buy" />

        <TextView
            android:id="@+id/showInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Welcome" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>